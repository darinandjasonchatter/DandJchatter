@model IEnumerable<DandJchatter.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Chat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfChat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(model => item.ApplicationUser.UserName)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Chat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TimeOfChat)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PostID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PostID }) |
